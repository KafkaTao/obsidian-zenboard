		"@types/react-dom": "^18.3.7",
		"@types/styled-jsx": "^2.2.9",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"concurrently": "^9.2.0",
		"esbuild": "^0.17.3",
		"obsidian": "latest",
		"tailwindcss": "^3.4.1",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
